@using Capstone.Web.Models;
@model Survey
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Survey</h2>
@using (Html.BeginForm("Index", "Survey", FormMethod.Post))
{
    @Html.Label("ParkCode", "Please select favorite park")
    @Html.DropDownListFor(m => m.ParkCode, Survey.FavoritePark)

    @Html.Label("EmailAddress", "email address: ")
    @Html.TextBoxFor(m => m.EmailAddress)

    @Html.Label("State", "State: ")
    @Html.TextBoxFor(m => m.State)

    @Html.Label("ActivityLevel", "What is your activity level?")
    @Html.DropDownListFor(m => m.ActivityLevel, Survey.PhysicalActivityLevel)



    <button>Submit!</button>
}
